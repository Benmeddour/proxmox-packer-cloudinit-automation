# Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# DO NOT COMMIT .env TO VERSION CONTROL

# Proxmox Connection Settings
PROXMOX_API_URL=https://YOUR_PROXMOX_IP:8006/api2/json
PROXMOX_API_TOKEN_ID=YOUR_USERNAME@pam!YOUR_TOKEN_NAME
PROXMOX_API_TOKEN_SECRET=YOUR_TOKEN_SECRET

# VM Configuration
VM_ID=102
PROXMOX_NODE=YOUR_PROXMOX_NODE
VM_NAME=ubuntu-server-noble-packer

# Network Configuration
HTTP_BIND_ADDRESS=YOUR_BUILD_MACHINE_IP
HTTP_PORT=8802

# SSH Configuration
SSH_USERNAME=admin
SSH_PASSWORD=YOUR_SSH_PASSWORD

# Optional: ISO Configuration (if using URL download instead of local file)
# ISO_URL=https://releases.ubuntu.com/noble/ubuntu-24.04.2-live-server-amd64.iso
# ISO_CHECKSUM=8762f7e74e4d64d72fceb5f70682e6b069932deedb4949c6975d0f0fe0a91be3
